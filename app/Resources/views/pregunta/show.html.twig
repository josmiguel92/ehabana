{% extends "AppBundle:Dash:base.html.twig" %}

{% block body %}
    <h1>{{ preguntum.pregunta }}</h1>

    <div class="row">
        <div class="col-md-8">
            <p><b>Id: </b>{{ preguntum.id }}</p>
            <p><b>Pregunta: </b>{{ preguntum.pregunta }}</p>
            <p><b>Question: </b>{{ preguntum.question }}</p>
            <p><b>Respuesta: </b>{{ preguntum.respuesta }}</p>
            <p><b>Otras Respuestas: </b>{{ preguntum.otrasrespuestas }}</p>
            <p><b>Answer: </b>{{ preguntum.answer }}</p>
            <p><b>Other answers: </b>{{ preguntum.otheranswers }}</p>
        </div>
        <div class="col-md-4">
            <a href="{{ path('dash_pregunta_index') }}" class="btn btn-default">Regresar a la lista</a>

            <a href="{{ path('dash_pregunta_edit', { 'id': preguntum.id }) }}" class="btn btn-primary">Editar</a>
            <hr>
            {{ form_start(delete_form) }}
            <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>

    </div>



{% endblock %}
