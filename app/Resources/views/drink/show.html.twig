{% extends "AppBundle:Dash:base.html.twig" %}
{% block title %}Bebidas{% endblock %}

{% block body %}
    <h1>Drink</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ drink.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ drink.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ drink.price }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ drink.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dash_drink_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dash_drink_edit', { 'id': drink.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
