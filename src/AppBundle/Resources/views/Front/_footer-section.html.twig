<div id="fh5co-footer" class="section footer" role="contentinfo">

    <div class="container">

        <div class="footer_grid_left_cell">

            <div>
                <h3 id="follow-us">{% trans %}Follow Us{% endtrans %}
                    {% if config['social.fb'] is defined %}
                        <a href="{{ config['social.fb'][locale] }}"><i class="icon-facebook"></i></a>
                    {% endif %}
                    {% if config['social.instagram'] is defined %}
                        <a href="{{ config['social.instagram'][locale] }}"><i class="icon-instagram"></i></a>
                    {% endif %}
                    {% if config['social.tripadvisor'] is defined %}
                        <a href="{{ config['social.tripadvisor'][locale] }}"><i
                                    class="icon-tripadvisor"></i></a>
                    {% endif %}
                </h3>

                <p>{% trans %}BÃºscanos en{% endtrans %} <a
                            href="https://www.alamesacuba.com/es/la-habana/restaurant/elizalde/"
