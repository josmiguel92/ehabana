<div class="section drinks_section" id="section3" style="background:url({{ asset("/images/drinks-wide.jpg") }}) 100% /100%">
    <div class="intro">
        {% for category in categories %}

            <div class="slide" id="slide{{ loop.index }}">
                <h1 class="drinks_category_name">{{category.getTransName(locale)}}</h1>
                <div class="drinks_category">
                    {% for drink in category.drinks %}
                        <p>{{drink.getTransName(locale)}}{#<span class="price-box">${{drink.price}}</span>#}</p>
                    {% else %}
                        <p>Nada que mostrar aqu√≠</p>
                    {% endfor %}
                </div>

            </div>


        {% endfor %}


    </div>

</div>
