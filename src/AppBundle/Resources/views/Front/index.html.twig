{% extends '@App/Front/base.html.twig' %}
{% block body %}
<div id="header">


    <ul id="header_menu">

        <li class="header_menu_logo"><a href="{{ path("homepage") }}"><img id="logo" src="{{ asset("images/logo_red.png") }}"></a></li>
        <li data-menuanchor="start" class="active link" ><a href="#start">{% trans %}Start{% endtrans %}</a></li>
        <li data-menuanchor="foods" class="link" ><a href="#foods">{% trans %}Food{% endtrans %}</a></li>
        <li data-menuanchor="drinks" class="link" ><a href="#drinks">{% trans %}Drinks{% endtrans %}</a></li>
        <li data-menuanchor="about"  class="link"><a href="#about">{% trans %}About Us{% endtrans %}</a></li>
        <li data-menuanchor="contact"  class="link"><a href="#contact">{% trans %}Contact{% endtrans %}</a></li>
        <li data-menuanchor="gallery" class="link" ><a href="#gallery">{% trans %}galery{% endtrans %}</a></li>
        <li class="header_menu_btn">
            <a href="#" class="btn btn-primary btn-outline btn-sm header-btn" id="BookingBtnTop" data-toggle="modal" data-target="#BookingModal">{% trans %}Reservar ahora{% endtrans %}</a>
        </li>
        <li class="header_menu_social">
            {% if config['social.fb'] is defined %}
                <a href="{{ config['social.fb'][locale] }}" class="offcanvas-social">
                    <i class="icon-facebook"></i>
                </a>
            {% endif %}
        </li>
        <li class="header_menu_social">
            {% if config['social.instagram'] is defined %}
                <a href="{{ config['social.instagram'][locale] }}" class="offcanvas-social">
            <i class="icon-instagram"></i>
            </a>
            {% endif %}
        </li>
        <li class="header_menu_social">
            {% if config['social.tripadvisor'] is defined %}
                <a href="{{ config['social.tripadvisor'][locale] }}" class="offcanvas-social">
                    <i class="icon-tripadvisor"></i>
                </a>
            {% endif %}
        </li>

        <li class="header_menu_lang">
            <a href="{{ path('homepage', {"_locale":"es"}) }}">
                <i class="hidden">ESPAÑOL</i><img src="{{ asset("images/spain.png") }}"  height="25em" width="40em">
            </a>
        </li>

        <li class="header_menu_lang">
            <a href="{{ path("homepage", {"_locale":"en"}) }}">
                <i class="hidden">ENGLISH</i><img src="{{ asset("images/uk.png") }}" height="25em" width="40em"></a>
        </li>

    </ul>
</div>
<div id="fullpage">
    <div class="section Background" id="section0">
        <div class="Background"
             style="position: relative;
height: calc(100% - 60px);
width: 100vw;
vertical-align: bottom;
top: 30px;
padding: 0;

">
            <canvas class="Background-canvas" style="height: calc(100vh - 60px) !important; width: 1350px !important; margin: 0; position: relative;" width="100"></canvas>

            <div class="intro_grid" style="display: grid; position: absolute; top: 0">
                <div></div>
                <div></div>

                <div>
                    <h1>Elizalde<br> Bar-Restaurante</h1>
                </div>
                <div></div>
            </div>


        </div>
    </div>
    <div class="section news" id="section1">
        {% for cartel in carteles %}
        <div class="slide" id="slide{{ loop.index }}">
            <div class="section_news_slide_grid">
                <div class="news_item_title">
                    <h1>{{ cartel.getTransTitle(locale) }}</h1>
                </div>
                <div class="news_item_image">
                    <img data-src="{{ asset(cartel.getWebPath()) }}" alt="{{ cartel.getTransTitle(locale) }}">
                </div>
                <div class="news_item_text">
                    {{ cartel.getTransAllResumen(locale) | nl2br }}
                </div>

            </div>
        </div>
        {% endfor %}

    </div>
    <div class="section food" id="section2">

        <div class="food_main_grid">
            <div class="food_grid_divider_inverted"></div>
            <div class="food_daily_menu">
                <h1>{% trans %}Menú del día{% endtrans %}</h1>
                <ul>
                    {% for item in daily %}
                        <li class="title">{{item.getTransName(locale)}}{#<span class="price">$ {{item.price}}</span>#}</li>
                        {#    <h5 class="category">{{item.getTransDesc(locale)}}</h5> #}
                    {% else %}
                        <li>No hay elementos para mostrar.</li>
                    {% endfor %}
                </ul>

            </div>
            <div class="food_grid_divider"></div>
            <div class="tapas">
                <div class="slide" id="slide{#{ loop.index }#}">
                    <div class="section_food_slide_grid">
                    {% for tapa in tapas %}

                        <div class="food_tapa_item">
                            <div class="food_tapa_item_image">
                                <img data-src="{{ asset(tapa.getWebPath) }}">
                            </div>
                            <div class="food_tapa_item_title">
                                <h3 class="food_tapa_item_title">{{tapa.getTransName(locale)}}</h3>
                            </div>
                            <div class="food_tapa_item_desc">
                                <h5 class="category">{{tapa.getTransIngredients(locale)}}</h5>
                            </div>
                        </div>

                    {% endfor %}


                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="section drinks_section" id="section3" style="background:url({{ asset("/images/drinks-wide.jpg") }}) 100% /100%">
        <div class="intro">
            <h1>{% trans%}Bebidas{% endtrans %}</h1>
            {% for category in categories %}

                <div class="slide" id="slide{{ loop.index }}">
                    <h1 class="drinks_category_name">{{category.getTransName(locale)}}</h1>
                    <div class="drinks_category">
                        {% for drink in category.drinks %}
                            <p>{{drink.getTransName(locale)}}{#<span class="price-box">${{drink.price}}</span>#}</p>
                        {% else %}
                            <p>Nada que mostrar aquí</p>
                        {% endfor %}
                    </div>

                </div>


            {% endfor %}


        </div>

    </div>
</div>
{% endblock body %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
    var myFullpage = new fullpage('#fullpage', {
        anchors: ['start','news', 'foods', 'drinks','about'],
        sectionsColor: ['#312a19','#fff','#2792E1','#834'],
        css3: true,
        onLeave: function(origin, destination, direction) {
            if (destination.index === 2) {
                destination.item.classList.add('load-background');
            }
        }
    });
</script>
{% endblock javascripts %}
{% block stylesheets %}
    {{ parent() }}
<style>

    /* Style for our header texts
    * --------------------------------------- */


    /* Centered texts in each section
    * --------------------------------------- */
    .section{
        text-align:center;
    }




    /* Bottom menu
    * --------------------------------------- */
    #infoMenu {
        bottom: 80px;
    }
    #infoMenu li a {
        color: #fff;
        z-index: 999;
    }

</style>
{% endblock %}