    /* Style for our header texts
    * --------------------------------------- */


    /* Centered texts in each section
    * --------------------------------------- */
    .section{
        text-align:center;
    }




    /* Bottom menu
    * --------------------------------------- */
    #infoMenu {
        bottom: 80px;
    }
    #infoMenu li a {
        color: #fff;
        z-index: 999;
    }

</style>
{% endblock %}